<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/black"
    tools:context="org.itc.app.blackweather.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center_vertical|center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/city_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sukkur"
            android:textColor="@android:color/white"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/date_n_time_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Wed, 21 2018"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:layout_margin="5dp"/>

    </LinearLayout>

    <ImageView
        android:id="@+id/condition_icon_iv"
        android:layout_width="180dp"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/light_rain" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center_vertical|center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/temprature_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="39 C"
            android:textColor="@android:color/white"
            android:textSize="48sp"
            android:layout_margin="5dp"/>

        <TextView
            android:id="@+id/condition_desc_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mostly Cloudy"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:layout_margin="5dp"/>

    </LinearLayout>

    <View
        android:layout_width="30dp"
        android:background="@android:color/white"
        android:layout_gravity="center_horizontal"
        android:layout_height="1dp"/>

</LinearLayout>
